<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
    "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <!-- Base layout template -->
    <definition name="base.layout" template="/WEB-INF/views/layout/base.jsp">
        <put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp"/>
        <put-attribute name="content" value=""/>
    </definition>

    <!-- Home page -->
    <definition name="home" extends="base.layout">
        <put-attribute name="title" value="Home"/>
        <put-attribute name="content" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <!-- About page -->
    <definition name="about" extends="base.layout">
        <put-attribute name="title" value="About"/>
        <put-attribute name="content" value="/WEB-INF/views/about.jsp"/>
    </definition>
</tiles-definitions>
